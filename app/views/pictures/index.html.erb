<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
　　<p><%= notice %></p>

　　　<h1>Pictures一覧</h1>


      <%= link_to "写真を投稿する", new_picture_path, class: 'btn btn-default' %>
  　 <% @pictures.each do |picture| %>
    <div class="row">
      <h4><strong><%= picture.title %></strong></h4>
      <p><%= picture.user.name %></p>
    </div>     
    <div class="thumbnail">
      <%= image_tag picture.image.url %>
    </div>  
    
    <div class="row">
      <%= link_to "編集", edit_picture_path(picture.id), class: 'btn btn-default btn-sm btn-info' %>
      <%= link_to "削除", picture_path(picture.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn btn-warning' %>
    </div>
    <% end %>

  </div>
</div>

<%= link_to "写真を投稿する", new_picture_path %>