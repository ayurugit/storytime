<%= form_for(@note) do |f| %>
  <% if @note.errors.any? %>
    <div id="error_explanation">
      <h2><%= @note.errors.count %>件のエラーがあります。</h2>

      <ul>
      <% @note.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <p>記入例</p>
  <p>日付：yyyy-mm-dd、学年：□年、クラス：□組、本：雨にも負けず、著者：宮沢賢治</p>

  <%= f.label :日付  %>
  <%= f.text_field :date, class: 'form-control' %>
  <br>
  <%= f.label :学年 %>
  <%= f.text_field :grade, class: 'form-control' %>
  <br>
  <%= f.label :クラス %>
  <%= f.text_field :place, class: 'form-control' %>
  <br>
  <%= f.label :本 %>
  <%= f.text_field :book_title, class: 'form-control' %>
  <br>
  <%= f.label :著者 %>
  <%= f.text_field :author, class: 'form-control' %>
  <br>
<%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>

<%= link_to "一覧画面にもどる", notes_path %>